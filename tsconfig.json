{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "types": ["node", "mocha"],
    "typeRoots": ["./src/types"],
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false
  }
}
